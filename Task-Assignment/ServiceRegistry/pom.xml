    <groupId>com.example.ServiceRegistry</groupId>
    <artifactId>ServiceRegistry</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>ServiceRegistry</name>
    <description>This is Service Registry.</description>

    <properties>
